<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('includes/app-header.ejs') %>
  <main class="product-list-container">
    <% if(products.length === 0) { %>
    <div class="not-found-wrapper">
      <img src="/img/empty.png" alt="" style="width:500px; max-width:90%;">
      <h1 style="text-align:center"> Product Not Found!</h1>
    </div>
    <% } else {  for(let product of products) { %>
    <article class="card product-item">
      <header class="card__header">
        <h1 class="product__title"><%= product.title %></h1>
      </header>
      <div class="card__image">
        <img src="https://dummyimage.com/300x300/363236/fff&text=product" , alt="">
      </div>
      <div class="card__content">
        <h2 class="product__price">200/-</h2>
        <p class="product__description">A very interesting book about so many even more interesting things!</p>
      </div>
      <div class="card__actions">
        <button class="btn">Add to Cart</button>
      </div>
    </article>
    <% }  } %>
  </main>
  <%- include('includes/end.ejs') %>